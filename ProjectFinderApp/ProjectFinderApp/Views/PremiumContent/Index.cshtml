@model IEnumerable<ProjectFinderApp.Models.PremiumContent>

@{
                /**/

                ViewBag.Title = "Index";
}
<br />
<h2>Premium Content</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FilePath1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Technique)
        </th>
        
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <img src=@item.FilePath1 alt="Image" width="300" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Technique)
        </td>
        


        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ContentID })

        </td>
    </tr>
    }

</table>

