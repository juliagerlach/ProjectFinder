@model IEnumerable<ProjectFinderApp.Models.Project>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Search for Projects</h2>

<p>
    @using (Html.BeginForm())
    {
        <p> Search For: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Search" /></p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Project Title", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th>
            @Html.ActionLink("Designer", "Index", new { sortOrder = ViewBag.DesignerSortParm })
        </th>
        <th>
            @Html.ActionLink("Technique", "Index", new { sortOrder = ViewBag.TechniqueSortParm })
        </th>
        <th>
            @Html.ActionLink("Supplies", "Index", new { sortOrder = ViewBag.SuppliesSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Magazine.MagazineTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnlineLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDesigner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Technique)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplies)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Magazine.MagazineTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssueID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageNumber)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.OnlineLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilePath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProjectID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID })
        </td>
    </tr>
}

</table>
