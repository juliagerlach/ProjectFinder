@model ProjectFinderApp.Models.Subscriber

@{
    ViewBag.Title = "Index1";
}
<br />
<h2>Secure Payment with Stripe</h2>
<p>We use Stripe, a secure payment processing service, to handle payments. <br />
    It's easy to use -- you do not need to have a separate Stripe account set up. <br />
    Your payment details are kept safe and secure with Stripe.</p>
<form action="MonthlyCharge" method="POST">
    <article>
        <label>Subscription Amount: $2.00</label>
    </article>
    <script src="https://checkout.stripe.com/checkout.js"
            class="stripe-button"
            data-key="@ViewBag.NotAKey"
            data-amount="200"
            data-name="Bead Project Finder"
            data-curreency="usd"
            data-description="Bead Project Finder monthly subscription"
            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
            data-locale="auto"
            data-zip-code="true">
    </script>
</form>

